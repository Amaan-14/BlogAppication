@model IEnumerable<BlogApplication.Models.Blog>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section>
    <div class="container-fluid d-flex justify-content-center flex-wrap">


        @foreach (var item in Model)
        {
            <div class="card card-Admin-custom-css m-3 ">
                <div class="row">
                    <div class="col-5">
                        <img src="@item.Photo1" class="card-img-top" alt="...">
                    </div>
                    <div class="col-7">
                        <div class="card-body blog-card-body p-0">
                            <p class="card-category">
                                @Html.DisplayFor(modelItem => item.Categories.Name)
                            </p>
                            <p class="card-text card-title">  @Html.DisplayFor(modelItem => item.Title) </p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new {@class = "btn btn-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

<br />


